#!/bin/bash

publish_to_nuget() {
    begin NuGet
    require_dir "${1:-}"
    require NUGET_TOKEN

    cmd=(dotnet nuget)
    if [[ "${DEBUG}" = true ]]; then
        cmd+=(--verbosity Debug)
    fi
    cmd+=(push "$1" -k "${NUGET_TOKEN}" -s https://api.nuget.org/v3/index.json --skip-duplicate)

    eval "${cmd[@]}"

    complete
}
